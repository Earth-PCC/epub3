<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:xml="http://www.w3.org/XML/1998/namespace" xml:lang="ja" lang="ja">
<head>
	<title>${title}</title>
<style type="text/css">
@page { margin:0; }
html, body { margin:0; padding:0; width:100%; height:100%; text-align:center; }
.outer { margin:1.5% 2%; width:96%; height:97%; border:1px solid black; text-align:center; }
.upper { padding:25% 5% 0 5%; height:40%; text-align:center; }
.lower { padding:0 5%; height:30%; text-align:center; }
.title, .subtitle, .orgtitle, .suborgtitle, .creator, .subcreator, .publisher { text-align:center; }
.title { font-size:2em;}
.subtitle { font-size:1.25em; }
.orgtitle { padding-top:.5em; font-size:1.5em; }
.suborgtitle { font-size:1em; }
.creator { padding-top:1em; font-size:1.25em; }
.subcreator { padding-top:.5em; font-size:1.1em; }
.publisher { margin-top:2em; }
</style>
</head>
<body>
<div class="outer">
<div class="upper">
<div class="title">${TITLE}</div>
#if (${SUBTITLE})
<div class="subtitle">${SUBTITLE}</div>
#end
#if (${ORGTITLE})
<div class="orgtitle">${ORGTITLE}</div>
#end
#if (${SUBORGTITLE})
<div class="suborgtitle">${SUBORGTITLE}</div>
#end
</div>
<div class="lower">
#if (${CREATOR})
<div class="creator">${CREATOR}</div>
#end
#if (${SUBCREATOR})
<div class="subcreator">${SUBCREATOR}</div>
#end
#if (${PUBLISHER})
<div class="publisher">${PUBLISHER}</div>
#end
</div>
</div>
</body>
</html>