<?xml version="1.0" encoding="UTF-8"?>
<package
 xmlns="http://www.idpf.org/2007/opf"
 version="3.0"
 xml:lang="ja"
 unique-identifier="pub-id"
#if (${bookInfo.ImageOnly})
 prefix="rendition: http://www.idpf.org/vocab/rendition/#
         ebpaj: http://www.ebpaj.jp/"
#else
 prefix="ebpaj: http://www.ebpaj.jp/"
#end
>
		<metadata xmlns:dc="http://purl.org/dc/elements/1.1/">
		<dc:title id="title">${title}</dc:title>
#if (${titleAs})
		<meta refines="#title" property="file-as">${titleAs}</meta>
#end
#if (${creator})
		<dc:creator id="creator">${creator}</dc:creator>
#if (${creatorAs})
		<meta refines="#creator" property="file-as">${creatorAs}</meta>
#end
		<meta refines="#creator" property="display-seq">1</meta>
#end
#if (${publisher})
		<dc:publisher id="publisher">${publisher}</dc:publisher>
#end
		<dc:language id="pub-lang">ja</dc:language>
		<dc:identifier id="pub-id">urn:uuid:${identifier}</dc:identifier>
		<meta property="dcterms:modified">${modified}</meta>

#if (${bookInfo.ImageOnly})
		<!-- Fixed-Layout Documents指定 -->
		<meta property="rendition:layout">pre-paginated</meta>
		<meta property="rendition:spread">landscape</meta>
		<meta name="original-resolution" content="${coverImage.Width}x${coverImage.Height}"/>

#if (${bookInfo.Vertical})
		<meta name="primary-writing-mode" content="horizontal-rl"/>
#else
		<meta name="primary-writing-mode" content="horizontal-lr"/>
#end
#end
<!-- etc. -->
<meta property="ebpaj:guide-version">1.1.3</meta>
	</metadata>

	<manifest>
#if (${bookInfo.ImageOnly})
		<item id="svg_image" href="style/fixed-layout-jp.css" media-type="text/css"/>
#else
		<item id="vertical" href="style/aozora.css" media-type="text/css"/>
		<item id="v_font" href="style/font.css" media-type="text/css"/>
		<item id="v_text" href="style/text.css" media-type="text/css"/>
		<item id="v_middle" href="style/middle.css" media-type="text/css"/>
		<item id="v_image" href="style/image.css" media-type="text/css"/>
		<item id="fixed-layout-jp" href="style/fixed-layout-jp.css" media-type="text/css"/>
		<item id="book-style" href="style/book-style.css" media-type="text/css"/>
		<item id="style-reset" href="style/style-reset.css" media-type="text/css"/>
		<item id="style-standard" href="style/style-standard.css" media-type="text/css"/>
		<item id="style-advance" href="style/style-advance.css" media-type="text/css"/>
#end

		<item id="nav" properties="nav" href="xhtml/nav.xhtml" media-type="application/xhtml+xml"/>

#if (${bookInfo.InsertCoverPage})
		<item id="cover-page" href="xhtml/cover.xhtml" media-type="application/xhtml+xml" properties="svg"/>

#end
#if (${title_page})
		<item id="title-page" href="xhtml/title.xhtml" media-type="application/xhtml+xml"/>
#end

#if (${bookInfo.ImageOnly})
#foreach(${sectionInfo} in ${sections})
		<item id="sec${sectionInfo.SectionId}" href="xhtml/${sectionInfo.SectionId}.xhtml" media-type="application/xhtml+xml" properties="svg"/>
#end
#else
#foreach(${sectionInfo} in ${sections})
		<item id="sec${sectionInfo.SectionId}" href="xhtml/${sectionInfo.SectionId}.xhtml" media-type="application/xhtml+xml"/>
#end
#end
#foreach($image in ${images})
#if ($image.IsCover)
		<item id="img${image.Id}" href="image/${image.OutFileName}" media-type="${image.Format}" properties="cover-image"/>
#else
		<item id="img${image.Id}" href="image/${image.OutFileName}" media-type="${image.Format}"/>
#end
#end
		<item href="toc.ncx" id="ncx" media-type="application/x-dtbncx+xml"/>
	</manifest>

#if (${bookInfo.Vertical})
	<spine page-progression-direction="rtl" toc="ncx">
#else
	<spine page-progression-direction="ltr" toc="ncx">
#end
#if (${bookInfo.InsertCoverPage})
		   <itemref idref="cover-page" properties="rendition:page-spread-center" linear="yes"/>
#end
#if (${title_page})
		<itemref idref="title-page" linear="yes"/>
#end
#if (${bookInfo.InsertTocPage})
		<itemref idref="nav" linear="yes"/>
#end

#foreach(${sectionInfo} in ${sections})
#if (${bookInfo.ImageOnly} && ${bookInfo.Vertical})
#if ($velocityCount % 2 == 0)
		<itemref idref="sec${sectionInfo.SectionId}" linear="yes" properties="page-spread-left"/>
#else
		<itemref idref="sec${sectionInfo.SectionId}" linear="yes" properties="page-spread-right"/>
#end
#elseif (${bookInfo.ImageOnly} && !${bookInfo.Vertical})
#if ($velocityCount % 2 == 0)
		<itemref idref="sec${sectionInfo.SectionId}" linear="yes" properties="page-spread-right"/>
#else
		<itemref idref="sec${sectionInfo.SectionId}" linear="yes" properties="page-spread-left"/>
#end
#else
		<itemref idref="sec${sectionInfo.SectionId}" linear="yes"/>
#end
#end
	</spine>

#if (${bookInfo.InsertCoverPage} || ${bookInfo.InsertTocPage})
	<guide>
#if (${bookInfo.InsertCoverPage})
		<reference type="cover" title="cover-page" href="xhtml/cover.xhtml"/>
#end
#if (${title_page})
		<reference type="title" title="title-page" href="xhtml/title.xhtml"/>
#end
#if (${bookInfo.InsertTocPage})
		<reference type="toc" title="nav" href="xhtml/nav.xhtml"/>
#end
#foreach(${sectionInfo} in ${sections})
		<reference type="text" title="sec${sectionInfo.SectionId}" href="xhtml/${sectionInfo.SectionId}.xhtml"/>
#break
#end
	</guide>
#end
</package>